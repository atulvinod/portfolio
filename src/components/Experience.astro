---
import Building from "../icons/Building.astro";
import Calendar from "../icons/Calendar.astro";

const { title, company, place, duration, type } = Astro.props;
---

<style>
    .experience {
        border-bottom: 1px solid lightgrey;
    }
</style>

<div class="flex flex-col experience py-5 dark:text-white">
    <div class="flex flex-row justify-between">
        <h1>
            {title}
        </h1>
        <span
            class="rounded-lg text-[#018C0F] bg-[#D7FFE0] text-center px-5 py-1 text-sm"
        >
            {type}
        </span>
    </div>
    <div class="mt-5 text-[12px]">
        <div class="flex flex-row justify-between">
            <div class="flex flex-row">
                <span class="flex flex-row items-center">
                    <Building />
                    <span class="ml-2">{company}</span>
                </span>
                {
                    place && (
                        <span class="ml-20 flex flex-row items-center">
                            <Calendar />
                            <span class="ml-2">{place}</span>
                        </span>
                    )
                }
            </div>
            <div>
                <span class="ml-5 flex flex-row items-center">
                    <Calendar />
                    <span class="ml-2">{duration}</span>
                </span>
            </div>
        </div>
    </div>
</div>
